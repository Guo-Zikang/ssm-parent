    <update id="updateEmp">
        update t_emp
        <set>
            <if test="empName != null">
                emp_name = #{empName},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="empSalary != null">
                emp_salary = #{empSalary}
            </if>
        </set>

        where id = #{id}
    </update>

</mapper>